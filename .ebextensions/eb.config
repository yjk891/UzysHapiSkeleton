commands:
  01limits:
    command: echo -e "#added by uzysjung\nroot soft nofile 131072\nroot hard nofile 131072\n* soft nofile 131072\n* hard nofile 131072" >/etc/security/limits.d/custom.conf
  02sysctl:
    command: sysctl -w fs.file-max=2097152 fs.nr_open=1048576 net.ipv4.netfilter.ip_conntrack_max=381666 net.nf_conntrack_max=381666 net.ipv4.ip_local_port_range="10000 61000" net.ipv4.tcp_fin_timeout=10 net.ipv4.tcp_tw_reuse=1 net.ipv4.tcp_tw_recycle=1 net.core.somaxconn=4096  net.ipv4.tcp_keepalive_intvl=20 net.ipv4.tcp_keepalive_probes=5 net.core.netdev_max_backlog=30000 net.ipv4.tcp_rmem="8192 87380 16777216" net.ipv4.tcp_wmem="8192 65536 16777216" net.core.rmem_max="12582912" net.core.wmem_max="12582912"
  03eth:
    command: ifconfig eth0 txqueuelen 5000
  04blas_install:
    command: sudo yum -y install lapack-devel blas-devel